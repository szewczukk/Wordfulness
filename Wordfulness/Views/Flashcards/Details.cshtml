@model Wordfulness.Models.Flashcard

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detailed flashcard</h1>

<div>
    <h4>Flashcard</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Front)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Front)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Back)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Back)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lesson)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Lessons" asp-action="Details" asp-route-id="@Model.LessonId">
                @Html.DisplayFor(model => model.Lesson.Name)
            </a>
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("ADMIN"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        @Html.Raw("|")
    }
    <a asp-action="Index">Back to List</a>
</div>
