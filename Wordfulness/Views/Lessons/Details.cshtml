@model Wordfulness.Models.Lesson

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detailed lesson</h1>

<div>
    <h4>Lesson</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId">
                @Html.DisplayFor(model => model.Course.Name)
            </a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flashcards)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var flashcard in Model.Flashcards)
                {
                    <li>
                        <a asp-controller="Flashcards" asp-action="Details" asp-route-id="@flashcard.Id">
                            @flashcard.Front - @flashcard.Back
                        </a>
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("ADMIN"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        @Html.Raw("|")
    }
    <a asp-action="Index">Back to List</a>
</div>
